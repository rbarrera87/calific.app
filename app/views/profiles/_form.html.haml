                  %option{value: "Alimentos"} Tecnologías en alimentos
                %br/
                %label{for: "situacion"} Situación escolar
                %br/
                %select
                  %option{value: "Sistema escolarizado"} Sistema escolarizado
                  %option{value: "Sistema no escolarizado"} Sistema no escolarizado
                %br/
                %label{for: "grupo"} Grupro
                %br/
                %select
                  %option{value: "a"} A
                  %option{value: "b"} B
                  %option{value: "c"} C
                  %option{value: "d"} D
                  %option{value: "e"} E
                  %option{value: "f"} F
                  %option{value: "e"} G
                  %option{value: "f"} H
                %br/
                %label{for: "turno"} Turno
                %br/
                %select
                  %option{value: "Matutino"} Matutino
                  %option{value: "Vespertino"} Vespertino
    .panel.panel-default{align: "left", style: "width: 400px ;"} 
      .panel-heading
        %h3.panel-title.text-info.text-center
          %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#Tres"}
            Información de contacto
      #Tres.panel-collapse.collapse
