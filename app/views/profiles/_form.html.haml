                %br/
                %select
                  %option{value: "Masculino"} Masculino
                  %option{value: "Femenino"} Femenino
                %br/
               
                = f.input :rfc,label: 'RFC:',:placeholder => "Ingresa tu RFC ", :autofocus => true, :input_html => {:class => 'form-control'}  
                
                = f.input :nss, label: 'NSS:' ,:placeholder => "Ingresa tu numero de servicio social", :autofocus => true, :input_html => {:class => 'form-control'}
