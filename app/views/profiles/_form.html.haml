      #Uno.panel-collapse.collapse
        .panel-body
          %table
            %tr
              %td

                = f.input :nombre, label: 'Nombre:' ,:placeholder => "Ingresa tu(s) Nombre(s)", :autofocus => true, :input_html => {:class => 'form-control'}

                = f.input :apellido_paterno, label: 'Apellido paterno:' , :autofocus => true, :input_html => {:class => 'form-control'}
  
                = f.input :apellido_materno, label: 'Apellido materno:' , :autofocus => true, :input_html => {:class => 'form-control'}
                
                %label{for: ""} Fotografía:
