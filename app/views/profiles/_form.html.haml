                = f.input :telefono, label: 'Teléfono:' ,:autofocus => true, :input_html => {:class => 'form-control'}

                = f.input :celular, label: 'Celular:' ,:autofocus => true, :input_html => {:class => 'form-control'}

                = f.input :cp, label: 'CP:' ,:autofocus => true, :input_html => {:class => 'form-control'}

                = f.input :calle, label: 'Calle:' ,:autofocus => true, :input_html => { :class => 'form-control'}

                = f.input :numero_exterior, label: 'Número exterior:' ,:autofocus => true, :input_html => {:class => 'form-control'}

                = f.input :numero_interior, label: 'Número interior:' , :autofocus => true, :input_html => {:class => 'form-control'}

                
                = f.input :numero_departamento, label: 'Número de departamento:' ,:autofocus => true, :input_html => {:class => 'form-control'}
                
                = f.input :referencias, :autofocus => true, :input_html => {:class => 'form-control'}

                = f.input :comentarios, label: 'Comentarios:' ,:autofocus => true, :input_html => {:class => 'form-control'}

                = f.input :poblacion, label: 'Población:' , :autofocus => true, :input_html => {:class => 'form-control'}

                = f.input :estado, label: 'Estado:' ,:autofocus => true, :input_html => {:class => 'form-control'}
