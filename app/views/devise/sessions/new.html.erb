<div class="container">
	<div class="row clearfix">
		<div class="col-md-12 column">
			<div class="form-group">
				<h3 class="text-center text-success">
				       Inicia Sesion
				</h3>
				<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					<div class="form-inputs">
						<%= f.input :email,:required => true, :autofocus => true, :input_html => {:size => 20, :class => 'form-control'} %> <br>
						<%= f.input :password, :required => true, :input_html => {:size => 20, :class => 'form-control'} %> <br>
						<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %> <br>
					</div>

						<%= f.button :submit, "Aceptar", :class => 'btn btn-success' %> 
						<%= render "devise/shared/links" %> 
						

				<% end %>
			</div>
		</div>
	</div>
</div>